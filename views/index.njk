{% extends "layout.njk" %}
{% block content %}
<main class="container">
  <hero>
    <h1>Welome to {{ title }}</h1>
    <h2>{{ message }}</h2>
    <ul>
      {% for movie in movies %}
        <li><a href="/movies/{{ movie.id }}">{{ movie.title }}, {{ movie.score }}, {{ movie.release_date }}</a></li>
      {% endfor %}
  </hero>
</main>
{% endblock %}